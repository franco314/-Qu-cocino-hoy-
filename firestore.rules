rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ==========================================
    // USERS COLLECTION
    // ==========================================
    match /users/{userId} {
      // Los usuarios pueden leer sus propios datos
      allow read: if request.auth != null && request.auth.uid == userId;

      // Los usuarios pueden escribir sus propios datos EXCEPTO campos protegidos
      // isPremium, premiumSince, subscriptionId solo pueden ser modificados por Cloud Functions (Admin SDK)
      allow create: if request.auth != null && request.auth.uid == userId
                    && !request.resource.data.keys().hasAny(['isPremium', 'premiumSince', 'subscriptionId', 'premiumEndedAt', 'premiumUpdatedAt']);

      allow update: if request.auth != null && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isPremium', 'premiumSince', 'subscriptionId', 'premiumEndedAt', 'premiumUpdatedAt']);

      // No permitir delete desde cliente
      allow delete: if false;

      // Subdocumentos del usuario (favorites, history, etc.)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ==========================================
    // SUBSCRIPTIONS COLLECTION
    // ==========================================
    // Solo Cloud Functions (Admin SDK) pueden escribir aquí
    // Los usuarios pueden leer su propia suscripción
    match /subscriptions/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Solo Admin SDK (Cloud Functions)
    }

    // ==========================================
    // SHARED RECIPES COLLECTION
    // ==========================================
    match /shared_recipes/{recipeId} {
      // Cualquier persona puede leer recetas compartidas (para links públicos)
      allow read: if true;
      // Solo usuarios autenticados pueden compartir recetas
      allow create: if request.auth != null;
      // No se permite actualizar ni eliminar recetas compartidas
      allow update, delete: if false;
    }

    // ==========================================
    // DEFAULT: DENY ALL
    // ==========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
